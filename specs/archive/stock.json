{
    "a2ui_version": "2.0",
    "screen_id": "InventoryMain",
    "metadata": {
        "original_source": "Cordova/jQuery (Legacy 2017)",
        "intent_summary": "Inventory management screen with list view, search, and hardware-based data capture."
    },
    "application_state": {
        "auth": {
            "is_logged_in": "localStorage:isLoggedIn",
            "session_token": "G_USER_TOKEN"
        },
        "inventory": {
            "items": "Collection<StockItem>",
            "last_sync_timestamp": "Timestamp"
        },
        "hardware_cache": {
            "captured_image": "G_IMG_CACHE (Base64)",
            "scanned_code": "G_LAST_SCAN"
        }
    },
    "component_tree": {
        "id": "root_scaffold",
        "type": "Scaffold",
        "header": {
            "type": "AppBar",
            "title": "INVENTORY MANAGEMENT",
            "actions": [
                {
                    "id": "logout_btn",
                    "type": "TextButton",
                    "label": "LOGOUT"
                }
            ]
        },
        "body": {
            "type": "Column",
            "properties": {
                "padding": "standard",
                "crossAxisAlignment": "stretch"
            },
            "children": [
                {
                    "id": "search_bar_group",
                    "type": "Column",
                    "children": [
                        {
                            "id": "search_input",
                            "type": "TextField",
                            "hint": "Search items..."
                        },
                        {
                            "id": "search_submit_btn",
                            "type": "Button",
                            "label": "SEARCH"
                        }
                    ]
                },
                {
                    "id": "inventory_list_view",
                    "type": "ListContainer",
                    "properties": {
                        "loading_indicator": "overlay"
                    },
                    "item_template": {
                        "id": "stock_card",
                        "type": "Card",
                        "children": [
                            {
                                "type": "Text",
                                "binding": "item.title",
                                "style": "bold"
                            },
                            {
                                "type": "Text",
                                "binding": "item.sku_info",
                                "style": "caption"
                            },
                            {
                                "type": "Row",
                                "properties": {
                                    "alignment": "end"
                                },
                                "children": [
                                    {
                                        "id": "edit_btn",
                                        "type": "SmallButton",
                                        "label": "EDIT",
                                        "color": "success"
                                    },
                                    {
                                        "id": "delete_btn",
                                        "type": "SmallButton",
                                        "label": "DEL",
                                        "color": "danger"
                                    }
                                ]
                            }
                        ]
                    }
                }
            ]
        },
        "footer": {
            "type": "BottomBar",
            "children": [
                {
                    "id": "camera_btn",
                    "type": "Button",
                    "label": "CAMERA"
                },
                {
                    "id": "scanner_btn",
                    "type": "Button",
                    "label": "SCANNER"
                }
            ]
        }
    },
    "logic_manifest": {
        "on_load": {
            "flow": [
                "Check auth status",
                "Trigger: fetch_inventory_api"
            ]
        },
        "fetch_inventory_api": {
            "endpoint": "https://jsonplaceholder.typicode.com/posts",
            "method": "GET",
            "post_processing": "Heavy data duplication (6x) for stress testing",
            "side_effect": "Show/Hide loading overlay"
        },
        "search_submit_btn": {
            "on_tap": {
                "intent": "Local_Filter",
                "target": "inventory_list_view",
                "logic": "Case-insensitive text containment check"
            }
        },
        "camera_btn": {
            "on_tap": {
                "intent": "Native_Service_Call",
                "service": "Camera",
                "output_mapping": "hardware_cache.captured_image"
            }
        },
        "scanner_btn": {
            "on_tap": {
                "intent": "Native_Service_Call",
                "service": "BarcodeScanner",
                "output_mapping": "hardware_cache.scanned_code"
            }
        },
        "delete_btn": {
            "on_tap": {
                "intent": "State_Mutation",
                "confirmation": "Are you sure?",
                "action": "Remove item from application_state.inventory.items"
            }
        }
    }
}