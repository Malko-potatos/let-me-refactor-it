        "output_contexts": [
          "order_pending_verification"
        ]
      },
      "business_logic": {
        "rules": [
          "총 결제 금액이 0원 이하일 경우 예외 처리",
          "재고 부족 시 'OUT_OF_STOCK' 에러 반환 및 프로세스 중단"
        ],
        "data_flow": "UI -> Validation -> Payment Gateway API -> Database Update"
      },
      "legacy_references": {
        "sources": [
          "legacy_src/modules/order_controller",
          "legacy_src/ui/checkout_view"
        ],
        "logic_snippets": "checkInventory() -> processPayment() -> saveOrder()"
      }
    }
  ]
}