        {
          "entity": "payment_method",
          "type": "Enum(CARD, TRANSFER)",
          "required": true,
          "source": "UI.Input"
        }
      ],
      "context": {
        "lifespan": 5,
        "pre_conditions": [
          "user.is_authenticated == true",
          "cart.is_empty == false"
